<Window x:Class="ResxLocalizer.EdWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="1.ico"
        Title="テキスト編集" Height="405" Width="621" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Label Name="l1" Grid.Row="0" Grid.Column="0">言語1</Label>
        <TextBox Name="tb1" Grid.Row="0" Grid.Column="1" Text="{Binding Disp1,UpdateSourceTrigger=PropertyChanged}" />
        <Label Name="l2" Grid.Row="1" Grid.Column="0">言語2</Label>
        <TextBox Name="tb2" Grid.Row="1" Grid.Column="1" Text="{Binding Disp2,UpdateSourceTrigger=PropertyChanged}" />
        <Label Grid.Row="2" Grid.ColumnSpan="2">※ 字句を変更すると、即時反映されます。</Label>
    </Grid>
</Window>
